<% layout('/layout/boilerplate') %>
<h1>ALL CAMPGROUNDS</h1>

<% for (let camp of campgrounds) {%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%= camp.image %> " />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small><%= camp.location %></small>
        </p>
        <a href="/campgrounds/<%= camp._id %>  " class="class btn btn-primary"
          >Show Campground</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
